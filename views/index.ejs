<% include partials/index_header %>

<style>
    #banner_container{
        padding-right:0;
        padding-left:0;
        margin-right:auto;
        margin-left:auto;
    }
    .media-left{
        padding-right:10px;
        padding-left:10px;
    }
    #banner{
        overflow:hidden;
        margin-left: 50%;
        transform: translateX(-50%);
        height: 125px;
        width: auto;
    }
    #banner_div{
        background-color: black;
    }
    .carousel-control-next,
    .carousel-control-prev {
        filter: invert(100%);
    }
    .img-fluid{
        width: auto;
        height: 500px;
        max-height: 500px;
    }
    #game_thumbnail{
        width: 125px;
        height: 75px;
    }
</style>
<br>

<div class="row">
    <div class="col-sm-12">
        <h2>New Releases</h2>
    </div>
</div>

<div class="container">
    <div id="Indicators" class="carousel slide" data-ride="carousel">

        <ol class="carousel-indicators">
            <% new_releases.forEach( (game, i) => { %>
                <li data-target="#Indicators" data-slide-to="<%= i %>" <%= (i == 0) ? 'class="active"' : ''%>></li>
            <% }); %>
        </ol>

        <div class="carousel-inner">
            <% new_releases.forEach( (game, i) => { %>
                <% let gameUrl = "/game?id=" + game._id; %>
                <div class="carousel-item <%= (i == 0) ? 'active' : ''%>">
                    <a href="<%=gameUrl%>">
                        <img class="img-fluid" src="<%= game.background_image %>">
                        <div class="carousel-caption">
                            <h2><%= game.name%></h2>
                            <p>Released <%= game.released.split('-')[1] %>-<%= game.released.split('-')[2] %></p>
                        </div>
                    </a>
                </div>
            <% }); %>

        </div>
        <a class="carousel-control-prev" href="#Indicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#Indicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="col-sm-6">
    <div class="jumbotron"><h1>   News   </h1></div>
        <% news.forEach((article, i) => { %>
        <div class="media">
            <div class="media-left">
                <img src="<%=article.urlToImage %>" class="media-object" style="width:150px">
            </div>
            <div class="media-body">
                <a href="<%= article.url %>"><h4><%= article.title%></h4></a>
                <h6>From: <%= article.source.name %></h6>
                <br>
                <p style="size:8px"> <%= article.description %> </p>
                <br>
            </div>
        </div>
        <% }); %>
</div>

