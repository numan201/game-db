<link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
<link id="stylelink" href="/stylesheets/style.css" rel="stylesheet">
<meta name="viewport" content="width=device-width, initial-scale=1">
<script>
    var pageSwitch = false;
    function initializeMode(){
        $('#test').innerText = localStorage.getItem('style');
        if(localStorage.getItem('style') === 'dark') {
            document.getElementById('stylelink').href = '/stylesheets/darkstyle.css';
            $('#mode').bootstrapToggle('off');
        } else {
            $('#mode').bootstrapToggle('on')
        }
        pageSwitch = true;
    }
    window.onload = initializeMode;

    $(function() {
        //switch toggle
        $('#mode').change(function() {
            if(pageSwitch === true) {
                var style = localStorage.getItem('style');
                var element = document.getElementById('stylelink');
                if (style === 'light') {
                    element.href = '/stylesheets/darkstyle.css';
                    localStorage.setItem('style', 'dark');
                } else {
                    element.href = '/stylesheets/style.css';
                    localStorage.setItem('style', 'light');
                }
            } else {
                pageSwitch = false;
            }
        })
    })
</script>
